<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".GeocoderDemo">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run Geocoder w/ bounding box"
            android:id="@+id/btnRunGeocoderBoundingBox"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="53dp"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="15dp"
            android:layout_below="@+id/btnRunGeocoder" android:layout_centerHorizontal="true">
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtResults"/>
    </ScrollView>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTxtInput"
            android:hint="Enter search word"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/btnRunGeocoderBoundingBox"
            android:layout_alignEnd="@+id/btnRunGeocoderBoundingBox" android:singleLine="true"
            android:text="Airport"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Run Geocoder (no bounding box)" android:id="@+id/btnRunGeocoder"
            android:layout_below="@+id/btnRunGeocoderBoundingBox" android:layout_centerHorizontal="true"/>

</RelativeLayout>